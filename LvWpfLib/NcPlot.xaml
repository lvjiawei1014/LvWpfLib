<UserControl x:Class="Ncer.UI.NcPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ncer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" SizeChanged="UserControl_SizeChanged">

    <Grid x:Name="root" >
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding TopSpace}"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="{Binding BottomSpace}"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding LeftSpace}"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="{Binding RightSpace}"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="plotCanvas" Grid.Column="1" Grid.Row="1"/>


    </Grid>

</UserControl>
